(package-initialize)

(setq package-archives '(("gnu"   . "http://elpa.emacs-china.org/gnu/")
                         ("melpa" . "http://elpa.emacs-china.org/melpa/")))
(custom-set-variables
 ;; custom-set-variables was added by Custom.
 ;; If you edit it by hand, you could mess it up, so be careful.
 ;; Your init file should contain only one such instance.
 ;; If there is more than one, they won't work right.
 '(custom-safe-themes
   (quote
    ("c3c0a3702e1d6c0373a0f6a557788dfd49ec9e66e753fb24493579859c8e95ab" default)))
 '(electric-pair-mode t)
 '(menu-bar-mode nil)
 '(package-selected-packages
   (quote
    (material-theme better-defaults flycheck py-autopep8 elpy company)))
 '(scroll-bar-mode nil)
 '(show-paren-mode t)
 '(tool-bar-mode nil))
(custom-set-faces
 ;; custom-set-faces was added by Custom.
 ;; If you edit it by hand, you could mess it up, so be careful.
 ;; Your init file should contain only one such instance.
 ;; If there is more than one, they won't work right.
 '(default ((t (:family "Inconsolata" :foundry "CYRE" :slant normal :weight normal :height 120 :width normal))))
 '(font-lock-comment-face ((t (:foreground "ForestGreen")))))

;;===========================================================company
(add-hook 'after-init-hook'global-company-mode)
;;(global-company-mode t)
(setq company-idle-delay 0.1
      company-minimum-prefix-length 1
      company-require-match nil
      company-dabbrev-ignore-case nil
      company-dabbrev-downcase nil
      company-show-numbers 
      )

(setq inhibit-startup-message t)
(setq require-final-newline t)
(global-linum-mode t)
(setq-default cursor-type 'bar)
(add-to-list 'custom-theme-load-path "~/.emacs.d/themes/")
(load-theme 'molokai t)
(setq make-backup-files nil)
(setq-default python-indent-offset 4)
(set python-indent-guess-indent-offset 4)
;;============================================================Python
(elpy-enable)
(when (require 'flycheck nil t)
  (setq elpy-modules (delq 'elpy-module-flymake elpy-modules))
  (add-hook 'elpy-mode-hook 'flycheck-mode))
(require 'py-autopep8)
(add-hook 'elpy-mode-hook 'py-autopep8-enable-on-save)

